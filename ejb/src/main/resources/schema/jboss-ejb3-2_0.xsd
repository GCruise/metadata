<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="http://www.jboss.com/xml/ns/javaee"
           xmlns="http://www.jboss.com/xml/ns/javaee"
           xmlns:javaee="http://java.sun.com/xml/ns/javaee"
           elementFormDefault="qualified"
           attributeFormDefault="unqualified"
           version="2.0">
   <!-- xs:include schemaLocation="ejb-jar_3_1.xsd"/ -->
   <!-- xs:include schemaLocation="http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"/ -->
   <!-- xs:import namespace="http://java.sun.com/xml/ns/javaee" schemaLocation="ejb-jar_3_1.xsd"/ -->
   <xs:import namespace="http://java.sun.com/xml/ns/javaee" schemaLocation="http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"/>

   <xs:element name="jboss-ejb3" type="jboss-ejb-jarType"/>

   <xs:complexType name="jboss-ejb-jarType">
      <xs:complexContent>
         <xs:extension base="javaee:ejb-jarType">
            <xs:sequence>
               <xs:element name="assembly-descriptor" type="jboss-assembly-descriptorType"/>
            </xs:sequence>
            <xs:attribute name="impl-version" type="javaee:dewey-versionType" fixed="2.0" use="required"/>
         </xs:extension>
      </xs:complexContent>
   </xs:complexType>

   <xs:complexType name="jboss-assembly-descriptorType">
      <xs:complexContent>
         <xs:extension base="javaee:assembly-descriptorType">
            <xs:sequence>
               <xs:any minOccurs="0"/>
            </xs:sequence>
         </xs:extension>
      </xs:complexContent>
   </xs:complexType>

   <xs:complexType name="jboss-assembly-baseType">
      <xs:complexContent>
         <xs:extension base="javaee:exclude-listType"/>
      </xs:complexContent>
   </xs:complexType>
   <xs:element name="description" type="javaee:descriptionType"/>

   <xs:element name="method" type="javaee:methodType"/>
</xs:schema>